@{
    ViewBag.BodyClass = "Home";
}

@section pageHeader{
    <div class="ui information">
        <h1 class="ui inverted header">
            It's about relationships.
        </h1>
        <p>
            Early childhood development sets the foundation for life long learning, behaviour, and health. That's why LearningLoop makes it easier than ever to keep track of your child's milestones, and work as a team with their educators. You can even talk to your child's ECE about questions you might have.
        </p>
    </div>
}

<div class="ui vertical feature segment">
    <div class="ui centered page grid">
        <div class="fourteen wide column">
            <div class="ui three column center aligned stackable divided grid">
                <div class="column">
                    <p>Fosters respect in children for diversity, equity and inclusion</p>
                    <p>
                        <a class="ui button" href="#">
                            Learn
                        </a>
                    </p>
                </div>
                <div class="column">
                    <p>Strengthens the ability of early childhood settings to meet the needs of young children</p>
                    <p>
                        <a class="ui blue right labeled icon button" href="#">
                            Research
